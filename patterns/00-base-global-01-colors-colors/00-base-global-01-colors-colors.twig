<h2>Primary Colors</h2>
<ul class="sg-colors">
  {% for item in itemsprimary %}
    <li>
      <div class="sg-colors__sample" style="background: {{item.value}};"></div>
      <div class="sg-info">
        <span>{{item.value}}</span> <br/>
        <code>{{item.name}}</code>
      </div>
    </li>
  {% endfor %}
</ul>

